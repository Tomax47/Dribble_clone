
<%= simple_form_for @shot, html: { multipart: true } do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="col-is-centered">
    <div class="col-is-half">

      <% unless !@shot.user.blank? %>
      <%= image_tag (@shot.user_shot_url), id: "previewImage" %>
      <% end %>

      <output id="list"></output>
      <div id="drop-zone" class="drop-zone-div">Drag your shot here!</div>
      <br />

      <%= f.input_field :user_shot,
                  label: false,
                  input_html: { class: "file-input", type: "file" },
                  wrapper: false,
                  label_html: { class: "file-label" },
                  class: "user-shot-input"
      %>

      <div class="field">
        <div class="control">
          <label class="form-label">Title</label>
          <div class="title-input">
            <%= f.input_field :title,
                              input_html: { class: "input" },
                              wrapper: false,
                              label_html: { class: "label"},
                              class: "input-field"
            %>
          </div>
        </div>
      </div>

      <div class="field">
        <div class="control">
          <label class="form-label">Description</label>
          <div class="description-input">
            <%= f.input_field :description,
                              input_html: { class: "textarea" },
                              wrapper: false,
                              label_html: { class: "label"}, class: "input-field-text"
            %>
          </div>
        </div>
      </div>

      <div class="field">
        <div class="control">
          <%= f.button :submit, class: "create-shot-btn" %>
        </div>
      </div>

    </div>
  </div>
<% end %>
