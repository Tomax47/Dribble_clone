<section class="login-div">
  <div class="left-login-part">
  </div>

  <div class="right-login-part">
    <div class="login-container">
      <h2 class="login-phrase">Sign in to Dribbble</h2>

      <div class="google-login-dev">
        <img class="google-icon" src="data:image/png;base64,">
        <%= link_to "Sign in with google", new_user_session_path, class: "google-sign-in-btn"%>
      </div>

      <div class="separator-phrase-div">
        <hr class="line-separator">
        <p class="separator-phrase"> or sign in with email </p>
        <hr class="line-separator">
      </div>

      <div class="login-form-div">
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs">

            <div class="email-div">
              <label class="form-label">Username or Email</label>
              <div class="email-input">
                <%= f.email_field :email,
                                  required: false,
                                  autofocus: true,
                                  input_html: { autocomplete: "email" },
                                  class: "input-field" %>
              </div>
              </div>

            <div class="password-div">
              <label class="form-label">Password</label>
              <div class="password-input">
                <%= f.password_field :password,
                                     required: false,
                                     label: false,
                                     input_html: { autocomplete: "current-password" },
                                     class: "input-field"%>
              </div>
            </div>

          </div>

          <div class="form-actions">
            <%= f.button :submit, "Sign In", class: "sign-in-btn"%>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>

    </div>
  </div>
</section>
